<tr>
  <%= link_to '+', increase_line_item_qty_path(line_item), method: :patch,
  remote: true, id: 'increase-qty' %>

  <td><%= line_item.quantity %></td>

  <%= link_to '-', decrease_line_item_qty_path(line_item), method: :patch,
  remote: true %>

  <td>
    <%= line_item.product.title %>
  </td>
  <td>
    <%= number_to_currency_brl(line_item.total_price) %>
  </td>
  <%= form_with(url: line_item_path(line_item), method: :delete, local: true) do
  |f| %>
  <td><%= f.submit 'x', class: 'delete' %></td>
  <% end %>
</tr>
