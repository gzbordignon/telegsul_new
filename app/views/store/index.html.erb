<h1>Your Pragmatic Catalog</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <% if product.image %>
            <div style="width: 100px">
              <%= image_tag(product.image) %>
            </div>
          <% end %>
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price) %>

            <%= link_to 'Comprar', product_path(product) %>

          
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>