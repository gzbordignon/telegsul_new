<h2>Seu carrinho</h2>
<table id="cart-table">
  <%= render(cart.line_items) %>

  <tfoot>
    <tr>
      <th colspan="2">Total:</th>
      <td id="cart-total">
        <%= number_to_currency_brl(cart.all_line_items_total_price) %>
      </td>
    </tr>
  </tfoot>
</table>

<div class="actions">
  <%= button_to 'Limpar carrinho', cart, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
