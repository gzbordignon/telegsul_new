<div id="cpf-form-container">
  <h2>Cadastrar</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'cpf-form'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :document_type, value: 'CPF', id: 'fisica-document-type' %>

    <div class="field">
      <%= f.label :name, 'Nome Completo' %>  <br>
      <%= f.text_field :name, autocomplete: "name", id: 'fisica-name' %> 
      <span></span>
    </div>

    <div class="field">
      <%= f.label :documen_number, 'CPF' %> <br>
      <%= f.text_field :document_number, autocomplete: "document", id: 'fisica-document-number' %>
      <span></span>
    </div>

    <div class="field">
      <%= f.label :email, 'E-mail' %> <br>
      <%= f.email_field :email, autocomplete: "email", id: 'fisica-email' %>
      <span></span>
    </div>

    <div class="field">
      <%= f.label :area_code, 'DDD' %> <br>
      <%= f.text_field :area_code, autocomplete: "area_code", id: 'fisica-area-code' %>
      <span></span>
    </div>
    <div>
      <%= f.label :phone_number, 'Número do telefone' %> <br>
      <%= f.text_field :phone_number, autocomplete: "phone_number", id: 'fisica-phone-number' %>
      <span></span>
    </div>

    <div class="field">
      <%= f.label :password, 'Senha' %>
      <% if @minimum_password_length %>
      <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", id: 'fisica-password' %>
      <span></span>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Confirmação de senha' %> <br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", id: 'fisica-password-confirmation' %>
      <span></span>
    </div> 
    <div class="actions">
      <!-- <#%= f.submit "Cadastrar", html: {id: 'fisica-submit', class: 'submit-create-user'} %> -->
      <button type="button" id="fisica-submit">Cadastrar</button>
    </div>
  <% end %> 
</div>